// ============================================
// STORAGE CONFIGURATION
// ============================================
// Storage root directory (absolute path)
// Example: $STORAGE_ROOT = '/var/www/nanocloud-storage';
// $STORAGE_ROOT = dirname(__DIR__) . '/storage';

// ============================================
// DOWNLOAD CONFIGURATION
// ============================================
// Download rate limit in MB/s (0 = unlimited)
// $DOWNLOAD_RATE_LIMIT_MB = 0;

// ============================================
// PERMISSIONS
// ============================================
// File and directory permissions for uploaded/created items
// Directory permissions (octal notation)
// 0755 = rwxr-xr-x (owner: full, group/others: read+execute)
// 0777 = rwxrwxrwx (full access for everyone)
// $DIR_PERMISSIONS = 0755;

// File permissions (octal notation)
// 0644 = rw-r--r-- (owner: read+write, group/others: read-only)
// 0666 = rw-rw-rw- (read+write for everyone)
// $FILE_PERMISSIONS = 0644;

// ============================================
// OWNERSHIP (requires appropriate privileges)
// ============================================
// Change owner for uploaded/created files and directories
// Leave null to keep default web server user
// Example: $FILE_OWNER = 'www-data';
// Example: $FILE_GROUP = 'www-data';
// $FILE_OWNER = null;
// $FILE_GROUP = null;

// ============================================
// UPLOAD CONFIGURATION
// ============================================
// Chunked upload configuration
// Temporary directory for chunk storage
// Example: $CHUNK_TEMP_DIR = '/var/tmp/nanocloud-chunks';
// $CHUNK_TEMP_DIR = sys_get_temp_dir() . '/nanocloud-chunks';

// Hours to keep incomplete uploads before cleanup
// Example: $CHUNK_STALE_HOURS = 4; // Keep for 4 hours
// $CHUNK_STALE_HOURS = 2;

